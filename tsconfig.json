{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": "./src",
        "alwaysStrict": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*.ts", "src/tests/routes.test.js"],
    "exclude": ["node_modules"]
}
